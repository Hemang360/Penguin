{
  "manifest_version": 3,
  "name": "Proof-of-Art",
  "version": "0.1.0",
  "description": "Securely captures LLM interactions for cryptographic signing.",
  "permissions": ["storage", "activeTab", "scripting", "debugger", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Proof-of-Art",
    "default_popup": "popup.html",
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

